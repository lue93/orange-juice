{
	// ðŸ§° configura o comportamento do compilado
	"compilerOptions": {
        // ðŸ§ª Ambiente e recursos modernos
		"lib": ["ESNext"],
		"target": "ESNext",
		"module": "Preserve",
		"moduleDetection": "force",
		"jsx": "react-jsx",
		"allowJs": true,

		// ðŸ“¦ Modo bundler (ideal para ferramentas como Vite, Bun, esbuild)
		"moduleResolution": "bundler",
		"allowImportingTsExtensions": true,
		"verbatimModuleSyntax": true,
		"noEmit": true,

		// âœ… Boas prÃ¡ticas e seguranÃ§a de tipo
		"strict": true,
		"skipLibCheck": true,
		"noFallthroughCasesInSwitch": true,
		"noUncheckedIndexedAccess": true,
		"noImplicitOverride": true,
		"strictNullChecks": true,
		"strictFunctionTypes": true,
		"strictPropertyInitialization": true,

		//ðŸ”’ Regras ainda mais rÃ­gidas (opcional, mas recomendÃ¡vel)		
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noPropertyAccessFromIndexSignature": true
	}
}
